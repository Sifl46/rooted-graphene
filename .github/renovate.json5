{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
  ],
  prHourlyLimit: 0,
  labels: [
    'dependencies',
  ],
  vulnerabilityAlerts: {
    labels: [
      'security',
      'dependencies',
    ],
  },
  packageRules: [
    {
      matchPackageNames: [
        '*',
      ],
      description: 'Automatically merge minor and patch-level updates',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/rooted-ota.sh/',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?_VERSION=(?<currentValue>.+?)\\s',
        '# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: currentValue=(?<currentValue>[a-z-]+?))?\\s.+?_COMMIT=(?<currentDigest>.+?)\\s',
      ],
    },
  ],
}
